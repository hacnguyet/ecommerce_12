<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ecommerce.model">
	<class name="Category" table="category">
		<id name="categoryId" column="category_id" type="integer" length="11">
			<generator class="increment"/>
		</id>
		
		<property name="categoryName" column="name" type="string" length="255" not-null="true"/>
		<property name="createAt" column="create_at" type="timestamp" generated="insert"/>
		<property name="updateAt" column="update_at" type="timestamp" generated="always"/>
		
		<list name="products" lazy="true" inverse="true">
			<key column="category_id" not-null="true" />
			<list-index column="product_id" />
			<one-to-many class="Product" />
		</list>
	</class>	
</hibernate-mapping>
