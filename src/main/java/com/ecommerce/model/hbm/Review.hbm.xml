<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ecommerce.model">
	<class name="Review" table="review">
		<id name="reviewId" column="review_id" type="integer" length="11">
			<generator class="increment"/>
		</id>
		
		<property name="content" column="content" type="text" />
		<property name="createAt" column="create_at" type="timestamp" generated="insert"/>
		<property name="updateAt" column="update_at" type="timestamp" generated="always"/>

		<many-to-one name="user" class="User" >
			<column name="user_id" not-null="true" />
		</many-to-one>
		
		<many-to-one name="product" class="Product" >
			<column name="product_id" not-null="true" />
		</many-to-one>
	</class>	
</hibernate-mapping>
