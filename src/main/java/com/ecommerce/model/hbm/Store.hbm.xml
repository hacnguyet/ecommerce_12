<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ecommerce.model">
	<class name="Store" table="store">
		<id name="storeId" column="store_id" type="integer" length="11">
			<generator class="increment"/>
		</id>
		
		<property name="storeName" column="name" type="string" length="255" not-null="true"/>
		<property name="storeAddress" column="address" type="string" length="255"/>
		<property name="createAt" column="create_at" type="timestamp" generated="insert"/>
		<property name="updateAt" column="update_at" type="timestamp" generated="always"/>

		<many-to-one name="user" class="User" >
			<column name="user_id" not-null="true" />
		</many-to-one>
		
		<list name="products" inverse="true">
			<key column="store_id" not-null="true" />
			<list-index column="product_id" />
			<one-to-many class="Product" />
		</list>
	</class>	
</hibernate-mapping>
