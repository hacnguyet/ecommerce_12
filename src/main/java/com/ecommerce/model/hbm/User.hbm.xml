<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ecommerce.model">
	<class name="User" table="user">
		<id name="userId" column="user_id" type="integer" length="11">
			<generator class="increment"/>
		</id>
		
		<property name="password" column="password" type="string" length="255" not-null="true"/>
		<property name="userName" column="name" type="string" length="255" not-null="true"/>
		<property name="userType" column="type" type="string" length="11" not-null="true"/>
		<property name="userGender" column="gender" type="string" length="11"/>
		<property name="userEmail" column="email" type="string" length="255" not-null="true"/>
		<property name="telNumber" column="tel_num" type="string" length="20"/>
		<property name="createAt" column="create_at" type="timestamp" generated="insert"/>
		<property name="updateAt" column="update_at" type="timestamp" generated="always"/>
		
		<list name="stores" lazy="true" inverse="true">
			<key column="user_id" not-null="true" />
			<list-index column="store_id" />
			<one-to-many class="Store" />
		</list>
		
		<list name="favorites" lazy="true" inverse="true">
			<key column="user_id" not-null="true" />
			<list-index column="favorite_id" />
			<one-to-many class="Favorite" />
		</list>
		
		<list name="reviews" lazy="true" inverse="true">
			<key column="user_id" not-null="true" />
			<list-index column="review_id" />
			<one-to-many class="Review" />
		</list>
	</class>	
	<query name="User.SelectUserByUserId">
		select user
		from User user
		where user.userId =
		:userId
	</query>
	<query name="User.SelectUserByUsername">
		select user
		from User user
		where user.userName =
		:userName
	</query>
	<query name="User.SelectUserByEmail">
		select user
		from User user
		where user.userEmail =
		:userEmail
	</query>
</hibernate-mapping>
