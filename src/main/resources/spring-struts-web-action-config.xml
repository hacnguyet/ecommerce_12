<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	
	<!-- ================== HOME MODULE ================== -->
	<bean id="homeAction" class="com.ecommerce.action.HomeAction">
		<property name="categoryService" ref="categoryService" />
	</bean>
	
	<!-- ================== USER MODULE ================== -->
	<bean id="userAction" class="com.ecommerce.action.UserAction" scope="prototype">
		<property name="userService" ref="userService" />
	</bean>
	
	<!-- ================== STORE MODULE ================== -->
	<bean id="storeAction" class="com.ecommerce.action.StoreAction" scope="prototype">
		<property name="userService" ref="userService" />
		<property name="productService" ref="productService" />
		<property name="categoryService" ref="categoryService" />
	</bean>
	
	<!-- ================== PRODUCT MODULE ================== -->
	<bean id="productAction" class="com.ecommerce.action.ProductAction" scope="prototype">
		<property name="userService" ref="userService" />
		<property name="productService" ref="productService" />
		<property name="categoryService" ref="categoryService" />
		<property name="storeService" ref="storeService" />
	</bean>
	
</beans>

