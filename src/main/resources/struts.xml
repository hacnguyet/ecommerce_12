<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
	<constant name="struts.ui.theme" value="simple" />
	
	<!-- Define default-web package: struts-default -->
	<package name="default" namespace="/" extends="struts-default, json-default">
		<result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>
        
        <global-results>
			<result name="sys_error" type="tiles">sys_error</result>
		</global-results>
        
        <action name="" class="homeAction">
			<result name="success" type="tiles">home</result>
		</action>
	</package>
	
	<!-- ===== Include Web Module Configuration ===== -->
	<include file="struts/struts-user.xml" />
	<include file="struts/struts-store.xml" />
	<include file="struts/struts-product.xml" />
	
</struts>
