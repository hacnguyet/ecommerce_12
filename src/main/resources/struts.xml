<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- devMode is helpful when you want some extra logs for debugging -->
	<constant name="struts.devMode" value="true" />
	<!-- This is important if you are planning to have slashes in Action URLs 
		e.g. In this demo, employee is deleted using URL /delete/10 This is 
		set to false; then struts will try to find mapping for URL "/10" instaed 
		of "/delete/10" -->
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	
	<!-- Define default-web package: struts-default -->
	<package name="default" namespace="/" extends="struts-default">
		<result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
        </result-types>
        
        <global-results>
			<result name="sys_error" type="tiles">sys_error</result>
		</global-results>
        
        <action name="" class="homeAction">
			<result name="success" type="tiles">home</result>
		</action>
	</package>
	
	<!-- ===== Include Web Module Configuration ===== -->
	<include file="struts-user.xml" />
	
</struts>
