<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Configure NameSpace for action web -->
	<package name="product" namespace="/product" extends="default">
		<global-results>
			<result name="sys_error" type="tiles">sys_error</result>
			<result name="login" type="redirect">/user/login</result>
		</global-results>
		
		<action name="create" class="productAction" method="create">
			<result name="success" type="json" >
				<param name="excludeProperties">
				    userService,
				    productService,
				    storeService,
				    categoryService
			  	</param>
			</result>
			<result name="error" type="json" >
			</result>
		</action>
	</package>
</struts>
