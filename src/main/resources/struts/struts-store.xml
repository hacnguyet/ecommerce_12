<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Configure NameSpace for action web -->
	<package name="store" namespace="/store" extends="default">
		<global-results>
			<result name="sys_error" type="tiles">sys_error</result>
			<result name="login" type="redirect">/user/login</result>
		</global-results>
		
		<action name="*/products" class="storeAction" method="manageProducts">
			<param name="storeId">{1}</param>
			<result name="success" type="tiles">manage_products</result>
		</action>
	</package>
</struts>
