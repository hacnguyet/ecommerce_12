<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<!-- Define Struts Tile for Front-End module -->
	<definition name="baselayout" template="/layouts/template.jsp">
		<put-attribute name="title" value="Ecommerce"/>
		<put-attribute name="header" value="/layouts/header.jsp" />
		<put-attribute name="body" value="/layouts/body.jsp" />
		<put-attribute name="footer" value="/layouts/footer.jsp" />
	</definition>
	
	<definition name="sys_error" template="/layouts/template.jsp">
		<put-attribute name="title" value="System'error | Ecommerce"/>
		<put-attribute name="body" value="/views/404.jsp" />
	</definition>

	<definition name="home" extends="baselayout">
		<put-attribute name="title" value="Home | Ecommerce"/>
		<put-attribute name="body" value="/views/homepage.jsp" />
	</definition>
	
	<definition name="login" extends="baselayout">
		<put-attribute name="title" value="Login | Ecommerce"/>
		<put-attribute name="body" value="/views/user/login.jsp" />
	</definition>
	
	<definition name="signup" extends="baselayout">
		<put-attribute name="title" value="Signup | Ecommerce"/>
		<put-attribute name="body" value="/views/user/signup.jsp" />
	</definition>

</tiles-definitions>
